{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CROSS LINK ACCESS",
  "version": "1.0.0",
  "identifier": "com.crosslinkaccess.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CROSS LINK ACCESS",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://*.bsky.social https://*.googleapis.com https://*.facebook.com https://*.threads.net https://*.tiktokapis.com; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "SocialNetworking",
    "shortDescription": "Multi-platform social media posting tool",
    "longDescription": "CROSS LINK ACCESS is a desktop application that enables cross-posting to multiple social media platforms including Bluesky, YouTube, Instagram, Threads, and TikTok.",
    "copyright": "Â© 2026 CROSS LINK ACCESS",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "wix": {
        "language": "ja-JP"
      }
    }
  }
}